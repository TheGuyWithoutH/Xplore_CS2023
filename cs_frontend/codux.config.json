{  
    "$schema": "https://wixplosives.github.io/codux-config-schema/codux.config.schema.json",
    "newComponent": {
        "componentsPath": "src/components"
    },
    "sassCompilation": {
        "modules": {
            "include": [
                "**/*.module.sass"
            ],
            "ignore": []
        },
        "compilerRuntime": "auto",
        "resolveUrls": true,
        "includePaths": [
            "src/components",
            "src/pages",
            "src/styles"
        ]
    }
}  